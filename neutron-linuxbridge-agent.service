[Unit]
Description=OpenStack Neutron Linux Bridge Agent
After=syslog.target network.target

[Service]
Type=simple
User=neutron
ExecStart=/usr/bin/neutron-linuxbridge-agent --config-file /etc/neutron/plugins/ml2/linuxbridge_agent.ini --config-file /etc/neutron/neutron.conf --log-file /var/log/neutron/linuxbridge-agent.log
PrivateTmp=true
KillMode=process

[Install]
WantedBy=multi-user.target
